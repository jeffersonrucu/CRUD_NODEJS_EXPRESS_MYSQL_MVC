<%- include('./partials/sidebar'); %>
    <main class="product">
        <h1>Clientes</h1>

        <section class="mt-5">
            <div>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nome</th>
                            <th scope="col">Telefone</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0; i<clients.length; i++) {%>
                            <tr>
                                <th scope="row"><%= clients[i]['id'] %></th>
                                <td><%= clients[i]['name'] %></td>
                                <td><%= clients[i]['phone'] %></td>
                                <td class="d-flex justify-content-end gap-2">
                                    <button class="btn btn-danger delete"  id="<%= clients[i]['id'] %>">excluir</button>
                                    <button class="btn btn-warning update" id="<%= clients[i]['id'] %>">editar</button>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </section>
    </main>
    <%- include('./partials/footer'); %>